<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".AdminFirstPage"
    android:padding="30dp"
    android:gravity="center">

    <ImageView
        android:layout_marginBottom="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/loginicon"/>

    <Button
        android:id="@+id/CreateNewPollID"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:text="Create New Poll"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />


    <Button
        android:id="@+id/EditExistingPollsID"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:text="Edit Existing Polls"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/PollResultsforAdminID"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:text="Poll Results"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />

</LinearLayout>