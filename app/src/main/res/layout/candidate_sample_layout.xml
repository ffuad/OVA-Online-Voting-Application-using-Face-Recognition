<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

<ImageView
    android:id="@+id/CandidateLogoInListViewID"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    />

    <TextView
        android:id="@+id/CandidateNameInListID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/CandidateLogoInListViewID"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="Candidate Name"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/CandidateVotesInListID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CandidateNameInListID"
        android:layout_marginStart="105dp"
        android:layout_marginTop="10dp"
        android:text="Votes"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>